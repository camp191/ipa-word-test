{
    "extends": "airbnb",
    "rules": {
        "semi": [2, "never"],
        "react/jsx-filename-extension": [1, {
          "extensions": [".js", ".jsx"]
        }],
        "import/no-unresolved": "off",
        "import/extensions": ["off", "always"],
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "env": {
        "browser": true,
        "node": true
    }
}